{
  "name": "audio-recorder-el",
  "version": "0.9.0",
  "description": "An <audio-recorder> custom element to simplify recording sound in the browser.",
  "type": "module",
  "customElements": "custom-elements.json",
  "main": "index.js",
  "scripts": {
    "start": "npx servor",
    "lint": "npx eslint --fix",
    "manifest:build": "npx custom-elements-manifest analyze",
    "manifest:watch": "npx custom-elements-manifest analyze --watch --dev",
    "site:build": "cp -R index.js demo src _site"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nfreear/audio-recorder.git"
  },
  "homepage": "https://nfreear.github.io/audio-recorder/demo/",
  "keywords": [
    "custom",
    "element"
  ],
  "license": "MIT",
  "author": "Nick Freear",
  "files": [
    "src"
  ],
  "dependencies": {
    "ndf-elements": "^1.7.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.4",
    "custom-elements-manifest": "^2.1.0",
    "eslint": "^9.30.0",
    "neostandard": "^0.12.1",
    "servor": "^4.0.2"
  }
}
